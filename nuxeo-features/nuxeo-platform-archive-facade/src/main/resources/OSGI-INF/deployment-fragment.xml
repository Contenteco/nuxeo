<?xml version="1.0"?>

<fragment>

  <!-- For MDB we need topics deployed -->

  <template name="archivePersistence" src="OSGI-INF/persistence.xml"
    installPath="META-INF/persistence.xml"
    required="true"/>

  <extension target="application#MODULE">
    <module>
      <ejb>${bundle.fileName}</ejb>
    </module>

    <module>
      <java>datasources/nxarchive-records-ds.xml</java>
    </module>
  </extension>

  <extension target="archivePersistence#CLASS">
    <class>org.nuxeo.ecm.platform.archive.ejb.ArchiveRecordImpl</class>
  </extension>

</fragment>

