<?xml version="1.0" encoding="UTF-8"?>
<theme name="galaxy-opensocial" template-engines="jsf-facelets">
  <layout>
    <page name="opensocial_dashboard">
      <!-- Top bar -->
      <section>
        <cell>
          <!-- logo -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- user services -->
          <fragment type="generic fragment"/>
        </cell>
        <cell>
          <!-- Include -->
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <fragment type="generic fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <fragment type="dashboardMainContent"/>
        </cell>
      </section>
      <section>
        <cell>
          <fragment type="generic fragment"/>
        </cell>
        <cell/>
      </section>
    </page>
  </layout>
  <presets>
    <preset category="color" name="opensocialdashboard">#000000</preset>
  </presets>
  <formats>
    <layout element="page[1]">
      <margin>0</margin>
      <padding>0</padding>
    </layout>
    <layout element="page[1]/section[1]">
      <height>36px</height>
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[1]/cell[1]">
      <width>18%</width>
      <text-align>center</text-align>
    </layout>
    <layout element="page[1]/section[1]/cell[2]">
      <width>82%</width>
      <padding>0px 10px 0px 0px</padding>
    </layout>
    <layout element="page[1]/section[1]/cell[3]">
      <width>0%</width>
    </layout>
    <layout element="page[1]/section[2]">
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[2]/cell[1]"/>
    <layout element="page[1]/section[3]">
      <margin-left>auto</margin-left>
      <margin-right>auto</margin-right>
      <width>100%</width>
      <padding>10px 5px</padding>
    </layout>
    <layout element="page[1]/section[3]/cell[1]">
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[4]">
      <margin-left>auto</margin-left>
      <margin-right>auto</margin-right>
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[4]/cell[1]">
      <width>100%</width>
      <text-align>right</text-align>
    </layout>
    <widget element="">
      <view>theme view</view>
      <icon>/nuxeo/icons/favicon.png</icon>
      <charset>utf-8</charset>
    </widget>
    <widget element="page[1]">
      <view>page frame</view>
    </widget>
    <widget element="page[1]/section[1]">
      <view>section frame</view>
    </widget>
    <widget element="page[1]/section[1]/cell[1]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[1]/cell[1]/fragment[1]">
      <view>Nuxeo DM logo (Galaxy Theme)</view>
    </widget>
    <widget element="page[1]/section[1]/cell[2]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[1]/cell[2]/fragment[1]">
      <view>User services (Galaxy theme)</view>
    </widget>
    <widget element="page[1]/section[1]/cell[3]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[1]/cell[3]/fragment[1]">
      <view>opensocial includes</view>
    </widget>
    <widget element="page[1]/section[2]">
      <view>section frame</view>
    </widget>
    <widget element="page[1]/section[2]/cell[1]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[3]">
      <view>section frame</view>
    </widget>
    <widget element="page[1]/section[3]/cell[1]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[3]/cell[1]/fragment[1]">
      <view>contenu principal</view>
    </widget>
    <widget element="page[1]/section[4]">
      <view>section frame</view>
    </widget>
    <widget element="page[1]/section[4]/cell[1]">
      <view>cell frame</view>
    </widget>
    <widget element="page[1]/section[4]/cell[1]/fragment[1]">
      <view>Nuxeo DM footer (Galaxy Theme)</view>
    </widget>
    <widget element="page[1]/section[2]/cell[1]/fragment[1]">
      <view>toolbar manager</view>
    </widget>
    <!-- compatibility with nuxeo 5 -->
    <style name="default buttons">
      <selector path="input.button">
        <font preset="default (Galaxy fonts)"/>
        <color>#333333</color>
        <border preset="buttons (Galaxy borders)"/>
        <background preset="buttons (Galaxy backgrounds)"/>
        <margin>5px 10px 10px 0px</margin>
        <padding>2px 5px 2px 5px</padding>
        <cursor>pointer</cursor>
      </selector>
      <selector path="input.button:hover">
        <color>#000000</color>
        <border-color>#92999e</border-color>
      </selector>
      <selector path="input.button[disabled=disabled], input.button[disabled=disabled]:hover">
        <color>#ccc</color>
      </selector>
    </style>
    <style name="toolBarManager" inherit="default buttons" >
      <selector path="">
        <font>normal 10px "Lucida Grande", Helvetica, sans-serif</font>
      </selector>
      <selector path=".dashboardToolBarManager">
        <background-color>#f3f6ff</background-color>
        <border-bottom>1px solid #77a4d7</border-bottom>
      </selector>
      <selector path=".widgetManager">
        <padding>10px 0</padding>
      </selector>
      <selector path=".navigationDomain">
        <float>right</float>
        <margin-right>5px</margin-right>
      </selector>
      <selector path=".navigationDomain span">
        <color>#888989</color>
        <padding-right>10px</padding-right>
      </selector>
      <selector path=".navigationDomain select">
        <margin-right>7px</margin-right>
      </selector>
      <selector path=".navigationDomain input.button">
        <margin>5px 10px 6px 0</margin>
      </selector>
    </style>
    <style name="dashboardLayoutManager" inherit="toolBarManager">
      <selector path="#layoutManager">
        <display>inline</display>
      </selector>
      <selector path="#layoutManagerContainer">
        <height>130px</height>
        <padding>20px 0</padding>
      </selector>
      <selector path="#closeLayoutManager">
      </selector>
      <selector path="#closeLayoutManager a">
        <color>#7d7d7d</color>
        <padding-left>18px</padding-left>
        <margin>10px</margin>
        <background>transparent url(/nuxeo/opensocial/images/arrow_unfolded.gif) top left no-repeat</background>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="#openLayoutManager">
        <padding-left>5px</padding-left>
      </selector>
      <selector path="#getLayoutManager">
      </selector>
      <selector path="#getLayoutManager a">
        <color>#7d7d7d</color>
        <padding-left>18px</padding-left>
        <margin>10px</margin>
        <background>transparent url(/nuxeo/opensocial/images/arrow_folded.gif) top left no-repeat</background>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="#listColumns">
        <padding-left>5px</padding-left>
        <width>5%</width>
        <float>left</float>
      </selector>
      <selector path="#listLayouts">
        <height>131px</height>
        <background-color>rgb(187, 187, 187)</background-color>
        <width>92%</width>
        <float>left</float>
      </selector>
      <selector path=".nv-layout">
        <text-decoration>none</text-decoration>
        <margin>auto</margin>
        <color>rgb(51, 51, 51)</color>
        <border-style>solid</border-style>
        <border-width>1px</border-width>
        <display>block</display>
        <border-color>rgb(221, 221, 221)</border-color>
        <padding>0.1em 3px</padding>
        <cursor>pointer</cursor>
      </selector>
      <selector path=".listBoxes div.selected">
        <background-color>rgb(187, 187, 187)</background-color>
      </selector>
      <selector path="#listColumns div button.selected">
        <border-color>rgb(187, 187, 187)</border-color>
      </selector>
      <selector path="#listColumns div.selected">
        <background-color>rgb(187, 187, 187)</background-color>
      </selector>
      <selector path="#tabLayout li a.selected">
        <border>2px solid rgb(0, 0, 0)</border>
      </selector>
      <selector path="div.button-container">
        <padding>5px</padding>
      </selector>
      <selector path="#x-1-default">
        <background-image>url(/nuxeo/opensocial/images/x-1-default.png)</background-image>
      </selector>
      <selector path="#x-2-default">
        <background-image>url(/nuxeo/opensocial/images/x-2-default.png)</background-image>
      </selector>
      <selector path="#x-3-default">
        <background-image>url(/nuxeo/opensocial/images/x-3-default.png)</background-image>
      </selector>
      <selector path="#x-3-header2cols">
        <background-image>url(/nuxeo/opensocial/images/x-3-header2cols.png)</background-image>
      </selector>
      <selector path="#x-4-footer3cols">
        <background-image>url(/nuxeo/opensocial/images/x-4-footer3cols.png)</background-image>
      </selector>
      <selector path="#closeLinkLayoutManager">
        <background-image>url(/nuxeo/opensocial/images/close.gif)</background-image>
        <color>rgb(0, 0, 0)</color>
        <margin-right>10px</margin-right>
        <padding-left>15px</padding-left>
        <background-repeat>no-repeat</background-repeat>
      </selector>
      <selector path=".invisible">
        <display>none</display>
      </selector>
      <selector path=".typeLayout">
        <height>75px</height>
        <border>2px solid rgb(255, 255, 255)</border>
        <background-color>rgb(255, 255, 255)</background-color>
        <width>100px</width>
        <display>block</display>
      </selector>
      <selector path="ul.option li">
        <list-style-type>none</list-style-type>
        <margin>0 7px 7px 0</margin>
        <padding>2px 0</padding>
        <float>left</float>
      </selector>
      <selector path="ul.option">
        <height>120px</height>
        <margin-left>7px</margin-left>
        <margin-top>5px</margin-top>
        <padding>0</padding>
        <overflow>auto</overflow>
      </selector>
      <selector path="#generalOptions">
        <background-color>rgb(187, 187, 187)</background-color>
        <width>22%</width>
        <margin>5px</margin>
        <float>left</float>
      </selector>
      <selector path="#tabDescription">
        <height>35px</height>
        <margin-left>30px</margin-left>
        <margin-bottom>5px</margin-bottom>
        <width>175px</width>
        <font-size>11px</font-size>
      </selector>
      <selector path="#modifyOptions">
        <margin-right>5px</margin-right>
        <margin-bottom>5px</margin-bottom>
        <display>block</display>
        <float>right</float>
      </selector>
      <selector path="#tabTitle">
        <margin-bottom>5px</margin-bottom>
        <width>175px</width>
        <margin-top>5px</margin-top>
        <font-size>11px</font-size>
      </selector>
      <selector path="span">
        <margin-left>2px</margin-left>
      </selector>
      <selector path="#theme-list li">
        <width>50px</width>
        <float>left</float>
      </selector>
      <selector path="#theme-list">
        <margin-left>30px</margin-left>
      </selector>
    </style>
    <style inherit="dashboardLayoutManager" name="dashboardGadgetManager">
      <selector path="#gadgetManager">
        <display>inline</display>
      </selector>
      <selector path="#gadgetManagerContainer">
        <height>130px</height>
        <padding>15px 0px</padding>
      </selector>
      <selector path="#closeGadgetManager">
      </selector>
      <selector path="#closeGadgetManager a">
        <color>#7d7d7d</color>
        <padding-left>18px</padding-left>
        <margin>10px</margin>
        <background>transparent url(/nuxeo/opensocial/images/arrow_unfolded.gif) top left no-repeat</background>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="#openGadgetManager">
        <padding-left>5px</padding-left>
      </selector>
      <selector path="#getGadgetManager">
      </selector>
      <selector path="#getGadgetManager a">
        <color>#7d7d7d</color>
        <padding-left>18px</padding-left>
        <margin>10px</margin>
        <background>transparent url(/nuxeo/opensocial/images/arrow_folded.gif) top left no-repeat</background>
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="#listCategories">
        <padding-left>5px</padding-left>
        <width>10%</width>
        <float>left</float>
      </selector>
      <selector path="#listGadgets">
        <height>auto</height>
        <background-color>rgb(187, 187, 187)</background-color>
        <width>89%</width>
        <float>left</float>
      </selector>
      <selector path=".nv-category">
        <text-decoration>none</text-decoration>
        <margin>auto</margin>
        <color>rgb(51, 51, 51)</color>
        <font-size>11px</font-size>
        <font-family>"Lucida Grande" Verdana Arial sans-serif</font-family>
        <display>block</display>
        <font-weight>bold</font-weight>
        <padding>1px</padding>
        <cursor>pointer</cursor>
      </selector>
      <selector path=".nv-category:hover">
        <text-decoration>underline</text-decoration>
      </selector>
      <selector path="#listCategories div button.selected">
        <border-color>rgb(187, 187, 187)</border-color>
      </selector>
      <selector path="#listCategories div.selected">
        <background-color>rgb(187, 187, 187)</background-color>
      </selector>
      <selector path="#tabGadgets li a.selected">
        <border>2px solid rgb(0, 0, 0)</border>
      </selector>
      <selector path="div.button-container">
        <padding>5px</padding>
      </selector>
      <selector path="#closeLinkGadgetManager">
        <background-image>url(/nuxeo/opensocial/images/close.gif)</background-image>
        <color>rgb(0, 0, 0)</color>
        <margin-right>10px</margin-right>
        <padding-left>15px</padding-left>
        <background-repeat>no-repeat</background-repeat>
      </selector>
      <selector path=".invisible">
        <display>none</display>
      </selector>
      <selector path=".typeGadget">
        <height>64px</height>
        <border>2px solid rgb(255, 255, 255)</border>
        <background-color>rgb(255, 255, 255)</background-color>
        <width>64px</width>
        <display>block</display>
      </selector>
      <selector path="ul.option li">
        <list-style-type>none</list-style-type>
        <margin>0 7px 7px 0</margin>
        <padding>2px 0</padding>
        <float>left</float>
      </selector>
      <selector path="ul.option">
        <height>130px</height>
        <margin-left>7px</margin-left>
        <margin-top>5px</margin-top>
        <padding>0</padding>
        <overflow>auto</overflow>
      </selector>
      <selector path=".directAdd">
        <height>18px</height>
        <bottom>-19px</bottom>
        <width>68px</width>
        <margin-top>10px</margin-top>
        <display>block</display>
        <line-height>18px</line-height>
        <cursor>default</cursor>
        <text-align>center</text-align>
      </selector>
      <selector path=".directAdd a">
        <background>#CECFD1 url(/nuxeo/opensocial/images/buttons.png) repeat-x left top</background>
        <text-decoration>none</text-decoration>
        <border>1px solid #BFC5CB</border>
        <color>#333333</color>
        <padding-right>8px</padding-right>
        <font-size>11px</font-size>
        <font-family>"Lucida Grande" Verdana Arial sans-serif</font-family>
        <display>block</display>
        <padding>4px 7px</padding>
        <cursor>pointer</cursor>
        <text-transform>capitalize</text-transform>
      </selector>
      <selector path=".directAdd span.addGadgetButton">
        <display>inline padding</display>
        <cursor>pointer</cursor>
      </selector>
      <selector path=".directAdd span.addedGadgetButton">
        <display>inline-block</display>
        <padding>0 2px 0 10px</padding>
        <cursor>pointer</cursor>
      </selector>
      <selector path="div.nameGadget">
        <font-family>"Lucida Grande" Verdana Arial sans-serif</font-family>
        <font-size>11px</font-size>
        <text-align>center</text-align>
      </selector>
    </style>
    <style name="loading">
      <selector path="*">
        <margin>auto</margin>
        <padding>0</padding>
      </selector>
    </style>
    <!--  -->
    <style element="page[1]">
      <selector path="" view="page frame">
        <font preset="default (intralm fonts)"/>
      </selector>
    </style>
    <!-- Actions de la top bar -->
    <style element="page[1]/section[1]">
      <selector path="" view="section frame">
        <background preset="header (intralm background)"/>
      </selector>
    </style>
    <style element="page[1]/section[1]/cell[1]">
      <selector path="" view="cell frame">
        <background preset="topbar (Galaxy backgrounds)"/>
      </selector>
    </style>
    <!-- Logo -->
    <style element="page[1]/section[1]/cell[1]/fragment[1]">
      <selector path="form" view="Nuxeo DM logo (Galaxy Theme)">
        <margin>0</margin>
        <padding>0</padding>
      </selector>
      <selector path="img, a" view="Nuxeo DM logo (Galaxy Theme)">
        <outline>none</outline>
      </selector>
    </style>
    <style element="page[1]/section[1]/cell[2]">
      <selector path="" view="cell frame">
        <background preset="topbar (Galaxy backgrounds)"/>
      </selector>
    </style>
    <!-- user services -->
    <style element="page[1]/section[1]/cell[2]/fragment[1]" inherit="dashboardGadgetManager">
      <selector path="div" view="User services (Galaxy theme)">
        <font preset="small (Galaxy fonts)"/>
        <color>#cecece</color>
        <margin>0</margin>
        <padding>2px 2px 0px 0px</padding>
        <line-height>185%</line-height>
      </selector>
      <selector path=".searchService" view="User services (Galaxy theme)">
        <vertical-align>middle</vertical-align>
        <float>right</float>
      </selector>
      <selector path=".userActions" view="User services (Galaxy theme)">
        <padding-top>11px</padding-top>
      </selector>
      <selector path=".directoryFilter, .searchField" view="User services (Galaxy theme)">
        <border>1px normal #666</border>
        <background>url(/nuxeo/icons/search.gif) 2px 2px no-repeat #FFF</background>
        <margin>0 5px 10px 0</margin>
        <padding>3px 3px 3px 20px</padding>
        <font-size>11px</font-size>
      </selector>
      <selector path="a, a:link, a:visited" view="User services (Galaxy theme)">
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="a:hover, a:active" view="User services (Galaxy theme)">
        <text-decoration>underline</text-decoration>
      </selector>
      <selector path="a, a:link, a:visited, a:hover, a:active" view="User services (Galaxy theme)">
        <color>#ffffff</color>
      </selector>
      <selector path="img" view="User services (Galaxy theme)">
        <margin-left>5px</margin-left>
        <margin-right>2px</margin-right>
        <vertical-align>middle</vertical-align>
      </selector>
      <selector path=".advancedSearchLink" view="User services (Galaxy theme)">
        <margin>0 2px 0 0</margin>
        <padding>0</padding>
        <line-height>1%</line-height>
      </selector>
      <selector path=".userServices .button" view="User services (Galaxy theme)">
        <margin-right>4px</margin-right>
      </selector>
      <selector path="form" view="User services (Galaxy theme)">
        <margin>0</margin>
        <padding>0</padding>
      </selector>
    </style>
    <style element="page[1]/section[1]/cell[3]">
      <selector path="" view="cell frame">
        <background preset="topbar (Galaxy backgrounds)"/>
      </selector>
    </style>
    <style element="page[1]/section[2]"/>
    <style element="page[1]/section[2]/cell[1]" inherit="dashboardGadgetManager"/>
    <style element="page[1]/section[2]/cell[1]/fragment[1]" inherit="dashboardGadgetManager"/>
    <style element="page[1]/section[3]"/>
    <style element="page[1]/section[3]/cell[1]"/>
    <style element="page[1]/section[3]/cell[1]/fragment[1]" inherit="loading">
      <selector path="*" view="contenu principal">
        <margin>0</margin>
        <padding>0</padding>
      </selector>
      <selector path="div.x-panel-tl" view="contenu principal">
        <background-color>#b4c7dc</background-color>
      </selector>
    </style>
    <style element="page[1]/section[4]">
      <selector path="" view="section frame">
        <border-top preset="topbar (Galaxy borders)"/>
      </selector>
    </style>
    <style element="page[1]/section[4]/cell[1]"/>
       <style element="page[1]/section[4]/cell[1]/fragment[1]" inherit="dashboardGadgetManager">
      <selector path="form, p" view="Nuxeo DM footer (Galaxy Theme)">
        <margin>5px 0px 0px 0px</margin>
        <padding>0</padding>
      </selector>
      <selector path="" view="Nuxeo DM footer (Galaxy Theme)">
        <font preset="small (Galaxy fonts)"/>
        <color preset="gray.dark (Galaxy colors)" />
        <padding>5px 15px 5px 5px</padding>
      </selector>
      <selector path="div" view="Nuxeo DM footer (Galaxy Theme)">
        <margin>0</margin>
        <line-height>1.25em</line-height>
        <padding>0</padding>
        <font-size preset="small (Galaxy fonts)"/>
      </selector>
      <selector path="a" view="Nuxeo DM footer (Galaxy Theme)">
        <color preset="blue.link (Galaxy colors)" />
        <text-decoration>none</text-decoration>
      </selector>
      <selector path="a:visited" view="Nuxeo DM footer (Galaxy Theme)">
        <color preset="blue.night (Galaxy colors)" />
      </selector>
      <selector path="a:active" view="Nuxeo DM footer (Galaxy Theme)">
        <color preset="blue.link (Galaxy colors)" />
      </selector>
      <selector path="a:hover" view="Nuxeo DM footer (Galaxy Theme)">
        <color preset="blue.link (Galaxy colors)" />
        <text-decoration>underline</text-decoration>
      </selector>
      <selector path="select.langSelect" view="Nuxeo DM footer (Galaxy Theme)">
        <margin>9px 5px 0px 5px</margin>
      </selector>
      <selector path="input.button" view="Nuxeo DM footer (Galaxy Theme)">
        <margin>5px 0px 5px 10px</margin>
      </selector>
    </style>
  </formats>
</theme>
