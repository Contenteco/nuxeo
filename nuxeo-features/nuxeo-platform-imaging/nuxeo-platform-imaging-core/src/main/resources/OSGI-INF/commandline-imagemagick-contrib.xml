<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.picture.commandline.imagemagick">

  <extension target="org.nuxeo.ecm.platform.commandline.executor.service.CommandLineExecutorComponent"
    point="command">
    
    <command name="identify" enabled="true">
      <commandLine>identify</commandLine>
      <parameterString> -ping -format '%m %w %h' #{inputFilePath}</parameterString>
      <winParameterString> -ping -format "%m %w %h" #{inputFilePath}</winParameterString>
      <installationDirective>You need to install ImageMagic.</installationDirective>
    </command>
    
    <command name="crop" enabled="true">
      <commandLine>stream</commandLine>
      <parameterString> -map rgb -storage-type char -extract  #{tileWidth}x#{tileHeight}+#{offsetX}+#{offsetY} #{inputFilePath}  - | convert -depth 8 -size #{tileWidth}x#{tileHeight}  rgb:-  #{outputFilePath} </parameterString>
      <installationDirective>You need to install ImageMagic.</installationDirective>
    </command>
    
    <command name="resizer" enabled="true">
      <commandLine>convert</commandLine>
      <parameterString>-size #{targetWidth}x#{targetHeight} #{inputFilePath} #{outputFilePath}</parameterString>
      <installationDirective>You need to install ImageMagic.</installationDirective>
    </command>
    
    <command name="rotate" enabled="true">
      <commandLine>convert</commandLine>
      <parameterString>-rotate #{angle} #{inputFilePath} #{outputFilePath}</parameterString>
      <installationDirective>You need to install ImageMagic.</installationDirective>
    </command>

  </extension>

</component>
