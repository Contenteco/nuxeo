<?xml version="1.0"?>
<component name="org.nuxeo.elasticsearch.ElasticSearchComponent.defaultConfig" version="1.0">


  <extension target="org.nuxeo.elasticsearch.ElasticSearchComponent"
    point="elasticSearchIndex">

   <elasticSearchIndex name="nxmain">

<settings>
{
   "index.number_of_replicas" : "0",
   "index.number_of_shards" : "1",
   "analysis" : {
      "filter" : {
         "en_stem_filter" : {
            "name" : "minimal_english",
            "type" : "stemmer"
         },
         "en_stop_filter" : {
            "stopwords" : [
               "_english_"
            ],
            "type" : "stop"
         },
         "fr_elision_filter" : {
            "articles" : [
               "c",
               "l",
               "m",
               "t",
               "qu",
               "n",
               "s",
               "j"
            ],
            "type" : "elision"
         },
         "fr_stem_filter" : {
            "name" : "minimal_french",
            "type" : "stemmer"
         },
         "fr_stop_filter" : {
            "stopwords" : [
               "_french_"
            ],
            "type" : "stop"
         }
      },
      "tokenizer" : {
         "path_tokenizer" : {
            "delimiter" : "/",
            "type" : "path_hierarchy"
         }
      },
      "analyzer" : {
         "en_analyzer" : {
            "alias" : "fulltext",
            "filter" : [
               "lowercase",
               "en_stop_filter",
               "en_stem_filter",
               "asciifolding"
            ],
            "type" : "custom",
            "tokenizer" : "standard"
         },
         "fr_analyzer" : {
            "filter" : [
               "lowercase",
               "fr_stop_filter",
               "fr_stem_filter",
               "asciifolding",
               "fr_elision_filter"
            ],
            "type" : "custom",
            "tokenizer" : "standard"
         },
         "path_analyzer" : {
            "type" : "custom",
            "tokenizer" : "path_tokenizer"
         },
         "default" : {
            "type" : "custom",
            "tokenizer" : "keyword"
         }
      }
   }
}
</settings>
<mapping>
{
   "_size" : {
      "enabled" : true
   },
   "_all" : {
      "analyzer" : "fr_analyzer"
   },
   "properties" : {
      "dc:description" : {
         "boost" : 1.5,
         "type" : "string",
         "analyzer" : "en_analyzer"
      },
      "dc:title" : {
         "boost" : 2,
         "type" : "string",
         "analyzer" : "en_analyzer"
      },
      "ecm:path" : {
         "fields" : {
            "children" : {
               "search_analyzer" : "keyword",
               "index_analyzer" : "path_analyzer",
               "type" : "string"
            },
            "ecm:path" : {
               "index" : "not_analyzed",
               "type" : "string"
            }
         },
         "type" : "multi_field"
      }
   }
}
</mapping>

   </elasticSearchIndex>

  </extension>

</component>
