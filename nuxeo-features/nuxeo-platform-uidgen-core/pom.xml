  <artifactId>nuxeo-platform-uidgen-core</artifactId>
  <packaging>ejb</packaging>
  <name>Nuxeo UID Generator Service</name>
  <description>Nuxeo Enterprise Platform: UID Generator Service. This service
    is used to manage UID. It can manage several UID generators. Each UID
    generator can specify a pattern for its UID
    (ex: DOC-&lt;year&gt;&lt;month&gt;-&lt;sequence number&gt;).</description>

  <dependencies>
    <dependency>
      <groupId>org.nuxeo.ecm.core</groupId>
      <artifactId>nuxeo-core</artifactId>
    </dependency>

    <dependency>
      <groupId>javax.ejb</groupId>
      <artifactId>ejb</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>javax.persistence</groupId>
      <artifactId>persistence</artifactId>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss</artifactId>
      <scope>provided</scope>
    </dependency>

    <dependency>
      <groupId>org.nuxeo.runtime</groupId>
      <artifactId>nuxeo-runtime-test</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>

</project>
