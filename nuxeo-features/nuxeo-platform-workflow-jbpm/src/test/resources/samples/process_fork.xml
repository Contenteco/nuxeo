<?xml version="1.0" encoding="UTF-8"?>
<process-definition xmlns="urn:jbpm.org:jpdl-3.1" name="sample">

   	<swimlane name="ernie">
    	<assignment expression="user(ernie)"/>
   	</swimlane>

   	<start-state name="Node_0">
    	<event type="node-enter">
        	<action class="org.nuxeo.ecm.platform.workflow.jbpm.TestActionHandler"/>
      	</event>
      	<task name="start" swimlane="ernie"/>
      	<transition name="" to="Node_1"/>
   	</start-state>

   	<task-node name="Node_1" create-tasks="false" signal="first-wait">
    	<event type="node-enter">
        	<action class="org.nuxeo.ecm.platform.workflow.jbpm.TestActionHandler"/>
      	</event>
      	<task name="task_1" swimlane="ernie">
	  	</task>
      	<transition name="" to="fork1"/>
   	</task-node>

	<fork name="fork1">
    	<transition name="" to="Node_2"/>
      	<transition name="tr2" to="Node_3"/>
   	</fork>
   
   	<task-node name="Node_2" create-tasks="false">
    	<event type="node-enter">
        	<action class="org.nuxeo.ecm.platform.workflow.jbpm.TestActionHandler"/>
      	</event>
      	<task name="task_2" swimlane="ernie">
	  	</task>
      	<transition name="" to="end"/>
   	</task-node>
   	
   	<task-node name="Node_3" create-tasks="false">
    	<event type="node-enter">
        	<action class="org.nuxeo.ecm.platform.workflow.jbpm.TestActionHandler"/>
      	</event>
      	<task name="task_3" swimlane="ernie">
	  	</task>
      	<transition name="" to="end"/>
   	</task-node>

   	<end-state name="end"/>	

</process-definition>