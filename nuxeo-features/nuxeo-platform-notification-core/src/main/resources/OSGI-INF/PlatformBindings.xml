<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.notification.facade.PlatformBindings"
  version="1.0">
  <documentation>
    Defines the notification service binding @author
    <a href="mailto:npaslaru@nuxeo.com">Narcis Paslaru</a>
  </documentation>

  <!-- TODO JC deprecated to be updated or deleted -->
  <extension target="org.nuxeo.ecm.platform.api.PlatformService"
    point="servers">
    <documentation>Defines the notification service binding</documentation>

    <server name="default">
      <service
        class="org.nuxeo.ecm.platform.notification.api.NotificationManager"
        jndiName="%NotificationServiceBean" />
      <service
        class="org.nuxeo.ecm.platform.ec.placeful.ejb.interfaces.EJBPlacefulService"
        jndiName="%PlacefulServiceBean" />
    </server>

  </extension>

</component>
