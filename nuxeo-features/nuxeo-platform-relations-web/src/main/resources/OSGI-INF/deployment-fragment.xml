<?xml version="1.0"?>

<fragment>

  <extension target="application#MODULE">

    <module>
      <ejb>${bundle.fileName}</ejb>
    </module>

  </extension>

  <extension target="faces-config#MANAGED-BEAN">
    <managed-bean>
      <managed-bean-name>relationCreationBean</managed-bean-name>
      <managed-bean-class>
        org.nuxeo.ecm.platform.relations.web.listener.ejb.RelationCreationBean
      </managed-bean-class>
      <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
  </extension>

  <extension target="faces-config#NAVIGATION">
    <navigation-case>
      <from-outcome>create_relation_search_document_popup</from-outcome>
      <to-view-id>/create_relation_search_document_popup.xhtml</to-view-id>
      <redirect />
    </navigation-case>
  </extension>

  <install>
    <!--  unzip the war template -->
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

    <!--  create a temp dir -->
    <!--  be sure no directory with that name exists -->
    <delete path="NXRelationsWeb.tmp" />
    <mkdir path="NXRelationsWeb.tmp" />

    <unzip from="${bundle.fileName}" to="NXRelationsWeb.tmp">
      <include>OSGI-INF/**</include>
    </unzip>

    <append from="NXRelationsWeb.tmp/OSGI-INF/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages.properties" addNewLine="true" />
    <append from="NXRelationsWeb.tmp/OSGI-INF/l10n/messages_en.properties"
      to="nuxeo.war/WEB-INF/classes/messages_en.properties" addNewLine="true" />
    <append from="NXRelationsWeb.tmp/OSGI-INF/l10n/messages_fr.properties"
      to="nuxeo.war/WEB-INF/classes/messages_fr.properties" addNewLine="true" />
    <append from="NXRelationsWeb.tmp/OSGI-INF/l10n/messages_de.properties"
      to="nuxeo.war/WEB-INF/classes/messages_de.properties" addNewLine="true" />
    <append from="NXRelationsWeb.tmp/OSGI-INF/l10n/messages_it.properties"
      to="nuxeo.war/WEB-INF/classes/messages_it.properties" addNewLine="true" />

    <delete path="NXRelationsWeb.tmp" />

  </install>

</fragment>

