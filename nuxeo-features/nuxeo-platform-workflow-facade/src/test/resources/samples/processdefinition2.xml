<?xml version="1.0" encoding="UTF-8"?>

<process-definition
  xmlns="urn:jbpm.org:jpdl-3.1"
  name="simple2">
   <start-state name="start">
     <task>
        <controller>
          <variable name="color" />
          <variable name="size" />
        </controller>
      </task>
      <transition name="to_state" to="first">
      </transition>
   </start-state>
   <state name="first">
      <transition name="to_end" to="end"/>
   </state>
   <end-state name="end"></end-state>
</process-definition>
