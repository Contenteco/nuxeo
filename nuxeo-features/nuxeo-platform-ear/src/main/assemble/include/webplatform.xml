<assembly>

  <fileSet id="nuxeo-template">
    <directory>src/main/resources</directory>
    <excludes>
      <exclude>**/.svn</exclude>
      <exclude>config/default-versioning-config.xml</exclude>
      <exclude>nxdocument.cpm.xml</exclude>
    </excludes>
  </fileSet>

  <fileSet id="nuxeo-template-webplatform">
    <directory>src/main/resources_webplatform</directory>
    <includes>
      <include>**</include>
    </includes>
    <excludes>
      <exclude>**/.svn</exclude>
    </excludes>
  </fileSet>

  <artifactSet extends="nuxeo-platform">
    <excludes>
      <artifact name="nuxeo-platform-filemanager-core-listener" />
    </excludes>
  </artifactSet>

</assembly>
