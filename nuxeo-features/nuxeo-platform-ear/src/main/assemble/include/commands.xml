  <assemble>
    <outputFile>themes</outputFile>
    <set>nuxeo-themes</set>
  </assemble>

  <assemble>
    <outputFile>platform</outputFile>
    <set>nuxeo-platform</set>
  </assemble>

  <assemble>
    <outputFile>platform</outputFile>
    <unpack>true</unpack>
