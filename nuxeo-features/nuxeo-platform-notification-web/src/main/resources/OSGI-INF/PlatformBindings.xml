<?xml version="1.0"?>

<component name="org.nuxeo.ecm.platform.ec.notification.web.PlatformBindings" version="1.0">
  <documentation>
    Defines the notification service binding
    @author <a href="mailto:dm@nuxeo.com">Dragos Mihalache</a>
  </documentation>

  <extension target="org.nuxeo.runtime.api.ServiceManagement"
      point="services">
      <documentation>Defines the notification service binding</documentation>

    <server name="default">
      <service class="org.nuxeo.ecm.platform.notification.api.NotificationManager" group="platform" >
        <locator>%NotificationServiceBean</locator>
      </service>
    </server>

  </extension>

</component>
