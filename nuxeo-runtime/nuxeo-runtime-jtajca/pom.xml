<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.runtime</groupId>
    <artifactId>nuxeo-runtime-parent</artifactId>
    <version>1.7.0-SNAPSHOT</version>
  </parent>

  <groupId>org.nuxeo.runtime</groupId>
  <artifactId>nuxeo-runtime-jtajca</artifactId>
  <name>Nuxeo Runtime JTA/JCA Implementation</name>
  <description>Nuxeo Runtime: JTA/JCA Implementation</description>

  <dependencies>
    <dependency>
      <groupId>org.nuxeo.runtime</groupId>
      <artifactId>nuxeo-runtime</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-beanutils</groupId>
      <artifactId>commons-beanutils</artifactId>
    </dependency>
    <dependency>
      <groupId>javax.ressource</groupId>
      <artifactId>jca-api</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.components</groupId>
      <artifactId>geronimo-connector</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.components</groupId>
      <artifactId>geronimo-transaction</artifactId>
    </dependency>
    <dependency>
      <groupId>org.apache.geronimo.specs</groupId>
      <artifactId>geronimo-jta_1.1_spec</artifactId>
    </dependency>
  </dependencies>

  <profiles>
    <profile>
      <id>bundlor</id>
      <build>
	<plugins>
	  <plugin>
	    <groupId>com.springsource.bundlor</groupId>
	    <artifactId>com.springsource.bundlor.maven</artifactId>
	    <version>1.0.0.RELEASE</version>
	    <executions>
              <execution>
		<id>bundlor</id>
		<goals>
		  <goal>bundlor</goal>
		</goals>
              </execution>
	    </executions>
	    <configuration>
	      <manifestTemplate>
Import-Package: 
 javax.tranaction
Bundle-ManifestVersion: 2
Bundle-Name: ${project.name}
Bundle-Version: ${bundle.version}
Export-Template:
 org.nuxeo.*;version="${bundle.version}"
Import-Template: 
 org.nuxeo.*;version="${bundle.version.range}"
              </manifestTemplate>
	      <manifestTemplatePath>${basedir}/src/main/resources/META-INF/MANIFEST.MF</manifestTemplatePath>
	      <outputPath>${basedir}</outputPath>
	    </configuration>
	  </plugin>
	</plugins>
      </build>
    </profile>
  </profiles>

</project>
