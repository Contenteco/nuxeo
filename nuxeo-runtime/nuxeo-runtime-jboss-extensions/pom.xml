<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo.runtime</groupId>
    <artifactId>nuxeo-runtime-parent</artifactId>
    <version>1.4.1-SNAPSHOT</version>
  </parent>

  <groupId>org.nuxeo.runtime</groupId>
  <artifactId>nuxeo-runtime-jboss-extensions</artifactId>
  <version>1.4.1-SNAPSHOT</version>
  <name>Nuxeo Runtime JBoss Extensions</name>

  <description>Nuxeo Runtime: JBoss Extensions.</description>

  <dependencies>
    <dependency>
      <groupId>org.nuxeo.common</groupId>
      <artifactId>nuxeo-common</artifactId>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss</artifactId>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-common</artifactId>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-jmx</artifactId>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-system</artifactId>
    </dependency>
    <dependency>
      <groupId>jboss</groupId>
      <artifactId>jboss-cache</artifactId>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <configuration>
          <artifactItems>
            <artifactItem>
              <groupId>org.nuxeo.common</groupId>
              <artifactId>nuxeo-common</artifactId>
              <version>${nuxeo.common.version}</version>
              <overWrite>true</overWrite>
              <outputDirectory>${jboss.lib}</outputDirectory>
            </artifactItem>
            <artifactItem>
              <groupId>org.nuxeo.runtime</groupId>
              <artifactId>nuxeo-runtime-jboss-extensions</artifactId>
              <version>${nuxeo.runtime.version}</version>
              <overWrite>true</overWrite>
              <outputDirectory>${jboss.lib}</outputDirectory>
            </artifactItem>
          </artifactItems>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>