<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.storage.sql.test.repo.repository.${nuxeo.test.vcs.repository}">
  <extension target="org.nuxeo.runtime.datasource" point="datasources">
    <datasource name="jdbc/nuxeo" xaDataSource="org.h2.jdbcx.JdbcDataSource"
      maxActive="20" minIdle="5" maxIdle="5">
        <property name="URL">${nuxeo.test.vcs.url};MVCC=TRUE</property>
        <property name="User">${nuxeo.test.vcs.user}</property>
        <property name="Password">${nuxeo.test.vcs.password}</property> 
    </datasource>
  </extension>
  <extension target="org.nuxeo.ecm.core.api.repository.RepositoryManager"
    point="repositories">
    <repository name="${nuxeo.test.vcs.repository}" />
  </extension>
  <extension target="org.nuxeo.ecm.core.repository.RepositoryService"
    point="repository">
    <repository name="${nuxeo.test.vcs.repository}"
      factory="org.nuxeo.ecm.core.storage.sql.ra.PoolingRepositoryFactory">
      <repository>
        <indexing>
          <fulltext analyzer="org.apache.lucene.analysis.fr.FrenchAnalyzer">
            <index> <!-- name="default" implied -->
              <!-- all props implied -->
            </index>
            <index name="title">
              <field>dc:title</field>
            </index>
          </fulltext>
        </indexing>
        <xa-datasource>jdbc/nuxeo</xa-datasource>
      </repository>
    </repository>
  </extension>
</component>
