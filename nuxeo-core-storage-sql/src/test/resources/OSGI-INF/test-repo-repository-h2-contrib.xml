<?xml version="1.0"?>
<component name="org.nuxeo.ecm.core.storage.sql.test.repo.repository">
  <extension target="org.nuxeo.ecm.core.api.repository.RepositoryManager"
    point="repositories">
    <repository name="test" />
  </extension>
  <extension target="org.nuxeo.ecm.core.repository.RepositoryService"
    point="repository">
    <repository name="test"
      factory="org.nuxeo.ecm.core.storage.sql.coremodel.SQLRepositoryFactory">
      <repository>
        <xa-datasource>org.h2.jdbcx.JdbcDataSource</xa-datasource>
        <!-- Directory name mentioned in SQLRepositoryTestCase -->
        <property name="URL">jdbc:h2:/tmp/nxsqltests-h2/nuxeo</property>
        <property name="User">sa</property>
        <property name="Password"></property>
      </repository>
    </repository>
  </extension>
</component>
