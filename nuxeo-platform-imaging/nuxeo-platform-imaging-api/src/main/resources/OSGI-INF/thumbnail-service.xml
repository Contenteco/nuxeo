<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.picture.thumbnail.ThumbnailService">

  <implementation
    class="org.nuxeo.ecm.platform.picture.api.thumbnail.ThumbnailServiceImpl" />
  <documentation>
  </documentation>

  <service>
    <provide
      interface="org.nuxeo.ecm.platform.picture.api.thumbnail.ThumbnailService" />
  </service>

  <extension-point name="thumbnailFactory">
    <documentation>
      @author Vladimir Pasquier (vpasquier@nuxeo.com)
      This extension
      provides thumbnail factories according to the type, facet and
      default one.
      <code>
        <thumbnailFactory name="thumbnailFolderishFactory"
          facet="Folderish"
          factoryClass="org.nuxeo.ecm.platform.picture.api.thumbnail.factories.ThumbnailFolderishFactory" />
        <thumbnailFactory name="thumbnailDocumentFactory"
          factoryClass="org.nuxeo.ecm.platform.picture.api.thumbnail.factories.ThumbnailDocumentFactory" />
      </code>

    </documentation>

    <object
      class="org.nuxeo.ecm.platform.picture.api.thumbnail.ThumbnailFactoryDescriptor" />

  </extension-point>

</component>
