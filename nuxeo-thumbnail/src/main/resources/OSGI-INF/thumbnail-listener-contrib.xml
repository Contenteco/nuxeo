    point="listener">

    <listener name="updateThumbListener" async="true"
      postCommit="true" class="org.nuxeo.ecm.platform.thumbnail.listener.UpdateThumbnailListener"
      priority="999">
      <event>documentCreated</event>
      <event>documentModified</event>
    </listener>
  </extension>

</component>