<assembly>

  <fileSet id="jboss">
    <directory>target/jboss</directory>
  </fileSet>
  <zipEntrySet id="nuxeo-ep-ear" profile="nuxeo-ep-jboss">
    <artifact>org.nuxeo.ecm.platform:nuxeo-platform-ear:${project.version}:zip</artifact>
  </zipEntrySet>
  <zipEntrySet id="nuxeo-dm-ear" profile="nuxeo-dm-jboss">
    <artifact>org.nuxeo.ecm.distribution:nuxeo-distribution-dm:${project.version}:zip</artifact>
  </zipEntrySet>

  <assemble>
    <set>jboss</set>
    <outputFile>/</outputFile>
  </assemble>
  <assemble>
    <set>nuxeo-ep-ear</set>
    <outputFile>server/default/deploy/nuxeo.ear</outputFile>
  </assemble>
  <assemble>
    <set>nuxeo-dm-ear</set>
    <outputFile>server/default/deploy/nuxeo.ear</outputFile>
  </assemble>

</assembly>
