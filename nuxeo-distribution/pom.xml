<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.nuxeo</groupId>
    <artifactId>nuxeo-ecm</artifactId>
    <version>5.2-20081231</version>
  </parent>

  <groupId>org.nuxeo.ecm.distribution</groupId>
  <artifactId>nuxeo-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Distribution Parent</name>
  <description>Build package distributions of nuxeo applications</description>

  <profiles>
    <profile>
      <id>nuxeo-jboss</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>nuxeo-platform-ear</module>
      </modules>
    </profile>
    <profile>
      <id>shell</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-shell</module>
      </modules>
    </profile>
    <profile>
      <id>jetty</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-distribution-jetty</module>
      </modules>
    </profile>
    <profile>
      <id>gf3</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-distribution-gf3</module>
      </modules>
    </profile>
    <profile>
      <id>tomcat</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
        <module>nuxeo-tomcat-template</module>
      </modules>
    </profile>
    <profile>
      <id>core</id>
      <modules>
        <module>nuxeo-distribution-base</module>
        <module>nuxeo-distribution-server</module>
      </modules>
    </profile>
  </profiles>

</project>
