<?xml version="1.0"?>
<component name="org.nuxeo.ecm.platform.convert.oooLaucnher.config.test">

  <extension target="org.nuxeo.ecm.platform.convert.ooolauncher.OOoLauncherComponent"
    point="oooLauncherConfig">

  <OOoLauncher>

    <!-- enable Nuxeo Laucnher to start OpenOffice server : default is true -->
    <enable>true</enable>

    <!-- define OOo server listen IP -->
    <oooListenIP>192.168.1.5</oooListenIP>
    <!-- define OOo server listen port -->
    <oooListenPort>8200</oooListenPort>

    <!-- define maximum wait time in second before timeout -->
    <oooStartupTimeOut>61</oooStartupTimeOut>

    <!-- define is Nuxeo must start the OOo server when Nuxeo starts, otherwise Nuxeo will start OOo when needed -->
    <startOOoAtServiceStartup>true</startOOoAtServiceStartup>


    <!-- define OOo installation path : used only if daemon is enabled -->
    <!-- if not defined Nuxeo will try to find the path automatically -->
    <oooInstallationPath>/opt/openoffice/program</oooInstallationPath>

  </OOoLauncher>

  </extension>

</component>
