<?xml version="1.0" encoding="UTF-8"?>
<component name="org.nuxeo.ecm.platform.jbpm.service.binding.contrib">

  <extension target="org.nuxeo.runtime.api.ServiceManagement"
    point="services">

    <documentation>Define the Jbpm beans as a platform services.</documentation>
    <service class="org.nuxeo.ecm.platform.jbpm.JbpmService"
      group="platform/jbpm">
      <locator>%JbpmServiceBean</locator>
    </service>
    <service class="org.nuxeo.ecm.platform.jbpm.JbpmTaskService"
      group="platform/jbpm">
      <locator>%JbpmTaskServiceBean</locator>
    </service>

  </extension>
</component>
