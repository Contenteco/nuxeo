    {"id": "context menu",
     "area": "nxthemesCanvasArea",
     "widget": {
       "type": "contextmenu",
       "noIcon": "/nuxeo/nxthemes/editor/icons/noicon-16.png",
       "arrow":  "/nuxeo/nxthemes/editor/icons/arrow-16.png",
       "showDisabled": false,
       "items": [
         {"type": "title"
         },
         {"type": "item",
          "label": "Edit",
          "icon": "/nuxeo/nxthemes/editor/icons/edit-16.png",
          "action": "edit element",
          "visible": "editable"
         },
         {"type": "separator"
         },
         {"type": "submenu",
          "label": "Widget",
          "visible": "has widget",
          "icon": "/nuxeo/nxthemes/editor/icons/set-widget-16.png",
          "items": [
            {"type": "selection",
             "action": "set element widget",
             "choices": "widgets"
            }
          ]
         },
         {"type": "item",
          "label": "Style",
          "icon": "/nuxeo/nxthemes/editor/icons/style-16.png",
          "action": "change element style",
          "visible": "has style"
         },
         {"type": "separator"
         },
         {"type": "item",
          "label": "Duplicate",
          "icon": "/nuxeo/nxthemes/editor/icons/duplicate-16.png",
          "action": "duplicate element",
          "visible": "duplicable"
         },
         {"type": "submenu",
          "label": "Align",
          "icon": "/nuxeo/nxthemes/editor/icons/align-16.png",
          "visible": "alignable",
          "items": [
            {"type": "selection",
             "action": "align element",
             "choices": "alignments"
            }
          ]
         },
         {"type": "item",
          "label": "Padding",
          "icon": "/nuxeo/nxthemes/editor/icons/padding-16.png",
          "action": "set element padding",
          "visible": "has padding"
         },
         {"type": "item",
          "label": "Split",
          "icon": "/nuxeo/nxthemes/editor/icons/split-16.png",
          "action": "split element",
          "visible": "splittable"
         },
         {"type": "item",
          "label": "Copy",
          "icon": "/nuxeo/nxthemes/editor/icons/copy-16.png",
          "action": "copy element",
          "visible": "copyable"
         },
         {"type": "item",
          "label": "Paste",
          "icon": "/nuxeo/nxthemes/editor/icons/paste-16.png",
          "action": "paste element",
          "visible": "pastable"
         },
         {"type": "separator"
         },
         {"type": "item",
          "label": "Delete",
          "icon": "/nuxeo/nxthemes/editor/icons/delete-16.png",
          "action": "delete element",
          "confirm": "Deleting, are you sure?",
          "visible": "deletable"
         }
       ]
     },
     "controllers": ["toggle context menu", "context menu actions"]
    }
