<?xml version="1.0"?>
<component name="org.nuxeo.theme.editor.webapp">

  <documentation>
    Theme editor
  </documentation>

  <extension target="org.nuxeo.ecm.webengine.WebEngineComponent"
    point="application-mapping">
    <mapping path="/nxthemes/editor" webapp="nxthemes-editor" />
  </extension>


  <extension target="org.nuxeo.ecm.webengine.WebEngineComponent"
    point="application">

    <webapp id="nxthemes-editor">
      <roots>
        <root priority="1">nxthemes-editor</root>
      </roots>
      <mappings>
        <mapping pattern="/set_style_category">
          <script>/set_style_category.groovy</script>
       </mapping>
       <mapping pattern="/set_preset_group">
          <script>/set_preset_group.groovy</script>
       </mapping>
       <mapping pattern="/set_style_property_category">
          <script>/set_style_property_category.groovy</script>
       </mapping>
       <mapping pattern="/assign_style_property">
          <script>/assign_style_property.groovy</script>
       </mapping>
       <mapping pattern="/save_theme">
          <script>/save_theme.groovy</script>
       </mapping>
       <mapping pattern="/load_theme">
          <script>/load_theme.groovy</script>
       </mapping>
       <mapping pattern="/repair_theme">
          <script>/repair_theme.groovy</script>
       </mapping>
       <mapping pattern="/expire_themes">
          <script>/expire_themes.groovy</script>
       </mapping>
       <mapping pattern="/align_element">
          <script>/align_element.groovy</script>
       </mapping>
       <mapping pattern="/select_element">
          <script>/select_element.groovy</script>
       </mapping>
       <mapping pattern="/set_size">
          <script>/set_size.groovy</script>
       </mapping>
       <mapping pattern="/update_element_widget">
          <script>/update_element_widget.groovy</script>
       </mapping>
       <mapping pattern="/duplicate_element">
          <script>/duplicate_element.groovy</script>
       </mapping>
       <mapping pattern="/delete_element">
          <script>/delete_element.groovy</script>
       </mapping>
      </mappings>
    </webapp>

  </extension>

</component>
