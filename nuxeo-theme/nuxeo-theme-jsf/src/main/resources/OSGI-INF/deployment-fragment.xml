<?xml version="1.0"?>

<fragment>


  <extension target="application#MODULE">

    <module>
      <ejb>${bundle.fileName}</ejb>
    </module>

  </extension>


  <extension target="faces-config#MANAGED-BEAN">

    <managed-bean>
      <managed-bean-name>nxthemesInfo</managed-bean-name>
      <managed-bean-class>
        org.nuxeo.theme.jsf.views.InfoBean
      </managed-bean-class>
      <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

  </extension>


  <extension target="faces-config#COMPONENT">

    <component>
      <component-type>nxthemes.model</component-type>
      <component-class>org.nuxeo.theme.jsf.component.UIModel</component-class>
    </component>

    <component>
      <component-type>nxthemes.view</component-type>
      <component-class>org.nuxeo.theme.jsf.component.UIView</component-class>
    </component>

    <component>
      <component-type>nxthemes.controller</component-type>
      <component-class>
        org.nuxeo.theme.jsf.component.UIController
      </component-class>
    </component>

    <component>
      <component-type>nxthemes.button</component-type>
      <component-class>org.nuxeo.theme.jsf.component.UIButton</component-class>
    </component>

    <component>
      <component-type>nxthemes.tabs</component-type>
      <component-class>org.nuxeo.theme.jsf.component.UITabs</component-class>
    </component>

    <component>
      <component-type>nxthemes.tab</component-type>
      <component-class>org.nuxeo.theme.jsf.component.UITab</component-class>
    </component>

    <component>
      <component-type>nxthemes.panel</component-type>
      <component-class>org.nuxeo.theme.jsf.component.UIPanel</component-class>
    </component>

    <component>
      <component-type>nxthemes.resources</component-type>
      <component-class>
        org.nuxeo.theme.jsf.component.UIResources
      </component-class>
    </component>

    <component>
      <component-type>nxthemes.fragment</component-type>
      <component-class>
        org.nuxeo.theme.jsf.component.UIFragment
      </component-class>
    </component>

    <component>
      <component-type>nxthemes.accesskeys</component-type>
      <component-class>
        org.nuxeo.theme.jsf.component.UIAccesskeys
      </component-class>
    </component>

    <component>
      <component-type>nxthemes.head</component-type>
      <component-class>
        org.nuxeo.theme.jsf.component.UIHead
      </component-class>
    </component>


  </extension>


  <extension target="web#SERVLET">

    <servlet>
      <servlet-name>NXThemes Resource Library</servlet-name>
      <servlet-class>org.nuxeo.theme.jsf.servlets.Resources</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>NXThemes CSS</servlet-name>
      <servlet-class>org.nuxeo.theme.jsf.servlets.Styles</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>NXThemes XML Export</servlet-name>
      <servlet-class>org.nuxeo.theme.jsf.servlets.XmlExport</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>NXThemes Negotiation Selector</servlet-name>
      <servlet-class>
        org.nuxeo.theme.jsf.servlets.NegotiationSelector
      </servlet-class>
    </servlet>

  </extension>


  <extension target="web#SERVLET-MAPPING">

    <servlet-mapping>
      <servlet-name>NXThemes Resource Library</servlet-name>
      <url-pattern>/nxthemes-lib/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>NXThemes CSS</servlet-name>
      <url-pattern>/nxthemes-css/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>NXThemes XML Export</servlet-name>
      <url-pattern>/nxthemes-xml-export/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>NXThemes Negotiation Selector</servlet-name>
      <url-pattern>/nxthemes-select/*</url-pattern>
    </servlet-mapping>

  </extension>

  <install>
    <unzip from="${bundle.fileName}" to="/">
      <include>nuxeo.war/**</include>
    </unzip>

    <delete path="nxthemes-jsf.tmp" />
    <mkdir path="nxthemes-jsf.tmp" />

    <unzip from="${bundle.fileName}" to="nxthemes-jsf.tmp">
      <include>META-INF/**</include>
    </unzip>

    <copy from="nxthemes-jsf.tmp/META-INF/nxthemes.taglib.xml"
      to="nuxeo.war/META-INF/" />
    <copy from="nxthemes-jsf.tmp/META-INF/nxthemes.tld"
      to="nuxeo.war/META-INF/" />

    <delete path="nxthemes-jsf.tmp" />
  </install>

</fragment>
