<?xml version="1.0" encoding="UTF-8"?>
<theme name="webengine">
  <layout>
    <page name="default">
      <section>
        <cell>
          <fragment type="region fragment"/>
          <fragment type="region fragment"/>
        </cell>
        <cell>
          <fragment type="region fragment"/>
          <fragment type="region fragment"/>
          <fragment type="region fragment"/>
          <fragment type="region fragment"/>
        </cell>
      </section>
      <section>
        <cell>
          <fragment type="region fragment"/>
        </cell>
      </section>
    </page>
  </layout>
  <properties element="page[1]/section[1]/cell[1]/fragment[1]">
    <name>header</name>
    <defaultBody>&lt;#if Root??&gt; &lt;div class="searchBox"&gt; &lt;form action="${Root.urlPath}@@search" method="get" accept-charset="utf-8"&gt; &lt;input type="search" name="q" id="q" results="5" value="Search"&gt; &lt;input type="hidden" name="p" value="${Root.repositoryPath}"&gt; &lt;/form&gt; &lt;/div&gt; &lt;h1&gt;&lt;a href="${appPath}/${Root.document.name}"&gt;${Root.document.title}&lt;/a&gt;&lt;/h1&gt; &lt;/#if&gt;</defaultBody>
    <defaultSrc/>
  </properties>
  <properties element="page[1]/section[1]/cell[1]/fragment[2]">
    <name>content</name>
    <defaultBody>##This is the content block##</defaultBody>
    <defaultSrc/>
  </properties>
  <properties element="page[1]/section[1]/cell[2]/fragment[1]">
    <name>toolbox</name>
    <defaultBody>&lt;#if This??&gt; &lt;div class="sideblock contextual"&gt; &lt;h3&gt;Toolbox&lt;/h3&gt; &lt;div class="sideblock-content"&gt; &lt;ul&gt; &lt;#list This.getActions("TOOLBOX") as action&gt; &lt;#if action.id == "print"&gt; &lt;li&gt;&lt;a href="${This.urlPath}@@${action.id}" target="_blank"&gt;${message('action.' + action.id)}&lt;/a&gt;&lt;/li&gt; &lt;#else&gt; &lt;li&gt;&lt;a href="${This.urlPath}@@${action.id}"&gt;${message('action.' + action.id)}&lt;/a&gt;&lt;/li&gt; &lt;/#if&gt; &lt;/#list&gt; &lt;/ul&gt; &lt;/div&gt; &lt;/div&gt; &lt;/#if&gt;</defaultBody>
    <defaultSrc/>
  </properties>
  <properties element="page[1]/section[1]/cell[2]/fragment[2]">
    <name>sidebar-header</name>
    <defaultBody/>
    <defaultSrc>common/nxlogin.ftl</defaultSrc>
  </properties>
  <properties element="page[1]/section[1]/cell[2]/fragment[3]">
    <name>sidebar-footer</name>
    <defaultBody>&lt;h3&gt;Help&lt;/h3&gt; &lt;ul&gt; &lt;li&gt;&lt;a href="${basePath}/docs/about.ftl"&gt;About&lt;/a&gt;&lt;/li&gt; &lt;li&gt;&lt;a href="${basePath}/docs/index.ftl"&gt;Documentation&lt;/a&gt;&lt;/li&gt; &lt;/ul&gt;</defaultBody>
    <defaultSrc/>
  </properties>
  <properties element="page[1]/section[1]/cell[2]/fragment[4]">
    <name>sidebar-content</name>
    <defaultBody>&lt;#if Context.principal.isAdministrator()&gt; &lt;h3&gt;Administration&lt;/h3&gt; &lt;ul&gt; &lt;li&gt;&lt;a href="${basePath}/admin"&gt;Admin board&lt;/a&gt;&lt;/li&gt; &lt;li&gt;&lt;a href="${basePath}/admin/users"&gt;User Management&lt;/a&gt;&lt;/li&gt; &lt;/ul&gt; &lt;/#if&gt;</defaultBody>
    <defaultSrc/>
  </properties>
  <properties element="page[1]/section[2]/cell[1]/fragment[1]">
    <name>footer</name>
    <defaultBody>&lt;p&gt;&amp;copy; 2000-2008 &lt;a href="http://www.nuxeo.com/en/"&gt;Nuxeo&lt;/a&gt;.&lt;/p&gt;</defaultBody>
    <defaultSrc/>
  </properties>
  <formats>
    <layout element="page[1]">
      <margin>0</margin>
      <padding>0</padding>
    </layout>
    <layout element="page[1]/section[1]">
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[1]/cell[1]">
      <width>80%</width>
      <text-align>left</text-align>
    </layout>
    <layout element="page[1]/section[1]/cell[2]">
      <width>20%</width>
    </layout>
    <layout element="page[1]/section[2]">
      <width>100%</width>
    </layout>
    <layout element="page[1]/section[2]/cell[1]">
      <width>100%</width>
    </layout>
